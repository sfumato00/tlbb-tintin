#ACTION {(%1)告诉你：(%2) "%3"} {

    #IF {"%2" == "$password"} {
        log {remote_control.log} {1};
        #VARIABLE {cmd} {%3};
        #ECHO {Executing remote command: %s} {$cmd};
        #SEND {$cmd};
    };    
}

#ACTION {(%1)告诉你：(%2) var %3 "%4"} {

    #IF {"%2" == "$password"} {
        log {remote_control.log} {1};
        #ECHO {Set variable '%s' to '%s'} {%3} {%4};
        #VARIABLE {%3} {%4};
        tell %1 {'%3' value is: $%3} 
    };    
}